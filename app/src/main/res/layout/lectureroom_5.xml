<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:src="@drawable/b_navi" />

    // 정보 부분.
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">

        // 목적지 이름.
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5_덕문관"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/title_info"/>

        // 목적지에 대한 정보.
        <ListView
            android:id="@+id/roominfo_content"
            android:layout_height="230dp"
            android:layout_width="280dp"
            android:background="@drawable/contents_info"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            // 취소 버튼.
            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="취소"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cancelbtn_info"/>

            // 길 안내 버튼.
            <TextView
                android:id="@+id/naviBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="길 안내"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/navibtn_info"/>
        </LinearLayout>

    </LinearLayout>

    //밑에 부분 전체
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="112dp"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="식   당"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/res"
                    android:layout_width="63dp"
                    android:layout_height="75dp"
                    android:layout_gravity="bottom|center"
                    android:background="#00ff0000"
                    android:cropToPadding="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_restaurant" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="112dp"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="셔틀버스"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/bus"
                    android:layout_width="63dp"
                    android:layout_height="75dp"
                    android:layout_gravity="bottom|center"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_busstop" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="158dp"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="강의동"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/lec"
                android:layout_width="63dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom|center"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                android:src="@drawable/b_lecture" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="112dp"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="기    타"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/etc"
                    android:layout_width="63dp"
                    android:layout_height="75dp"
                    android:layout_gravity="bottom|center"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_etc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="112dp"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="즐겨찾기"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/favor"
                    android:layout_width="63dp"
                    android:layout_height="75dp"
                    android:layout_gravity="bottom|center"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b_favor" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>